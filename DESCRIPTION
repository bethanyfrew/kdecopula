    cubature,
    locfit,
    qrng, 
    Rcpp (>= 0.11.2), 
    VineCopula (>= 1.5),
    graphics,
    grDevices, 
    stats,
    utils
LinkingTo:
    Rcpp, 
    RcppArmadillo
